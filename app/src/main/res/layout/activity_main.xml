<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trash Collection For Driver"
        android:textAlignment="center"
        android:textSize="@dimen/txt1" />

    <ImageView
        android:layout_width="@dimen/logo2"
        android:layout_height="@dimen/logo2"
        android:layout_marginTop="@dimen/default_space"
        android:contentDescription="@string/user_logo"
        android:scaleType="fitCenter"
        android:src="@drawable/worker2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_space"
        android:text="Name: Dinh Vu"
        android:textAlignment="center"
        android:textSize="@dimen/txt2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_space"
        android:text=" License plate: 47B-8258"
        android:textAlignment="center"
        android:textSize="@dimen/txt2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_space">

        <Button
            android:id="@+id/btnQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/help"
            app:icon="@drawable/ic_help_outline_24px"
            tools:ignore="RelativeOverlap" />

        <Button
            android:id="@+id/btnNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Notification"
            app:icon="@drawable/ic_notifications_none_24px"/>

    </RelativeLayout>

</LinearLayout>