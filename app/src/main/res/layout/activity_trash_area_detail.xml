<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_space"
    tools:context=".TrashAreaDetailActivity">

    <TextView
        android:id="@+id/tvNewRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Trash infomation"
        android:textAlignment="center"
        android:textSize="@dimen/txt1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNewRequest"
        android:layout_marginTop="10sp"
        android:text="Trash type" />

    <Spinner
        android:id="@+id/spType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spType"
        android:layout_marginTop="10sp"
        android:text="Trash Width" />

    <Spinner
        android:id="@+id/spWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spWidth"
        android:layout_marginTop="10sp"
        android:text="Trash Size" />

    <Spinner
        android:id="@+id/spSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnReport"
        android:layout_width="@dimen/btn4"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_space"
        android:background="#97F4B536"
        android:text="Report" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="@dimen/btn4"
        android:layout_height="wrap_content"
        android:layout_below="@id/spSize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_space"
        android:background="#009688"
        android:text="Done"
        app:backgroundTint="#FFEB3B" />


</RelativeLayout>