<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrashAreaDetailActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titleBar">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_chevron_left_white_50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvNewRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin điểm rác"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="@dimen/txt2" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_margin="@dimen/default_space">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loại Rác:" />

    <EditText
        android:id="@+id/txtTrashType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kích Thước:" />

    <EditText
        android:id="@+id/txtTrashSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Độ rộng:" />

    <EditText
        android:id="@+id/txtTrashWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:gravity="bottom"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnDone"
            android:layout_width="@dimen/btn4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_confirm"
            android:text="Hoàn thành"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/txt2_5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnReport"
            android:layout_width="@dimen/btn4"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnDone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_report"
            android:text="Báo cáo"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/txt2_5"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

</LinearLayout>