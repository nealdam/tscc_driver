<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_space"
    tools:context=".TrashAreaDetailActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvNewRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Trash infomation"
        android:textAlignment="center"
        android:textSize="@dimen/txt1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trash Type:" />

    <EditText
        android:id="@+id/txtTrashType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trash Size:" />

    <EditText
        android:id="@+id/txtTrashSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trash Width:" />

    <EditText
        android:id="@+id/txtTrashWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnReport"
        android:layout_width="@dimen/btn4"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_space"
        android:background="#97F4B536"
        android:text="Report" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="@dimen/btn4"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_space"
        android:background="#009688"
        android:text="Done"
        app:backgroundTint="#4CAF50" />


</LinearLayout>